<div class="row">
  <div class="col-md-1">
    <span><%=t :choose_zone %>: </span>
  </div>
  <div class="col-md-3">
    <select id="zone" name="zone" class="form-control">
      <% RsRails.get_config('zones').each_with_index do |z, i| %>
        <option value='<%= i+1 %>' <%= if params[:curZone] == "#{i+1}" then 'selected' else '' end%>>
          <%= "#{i+1}åŒº #{z['name']}" %></option>
      <% end %>
    </select>
  </div>
  <div class="col-md-2">
    <div class="input-group">
      <span class='input-group-addon'><%=t :ID %></span>
      <input type='text' name='uid' id='uid' value="" class="form-control"/>
    </div>
  </div>

  <div class="col-md-2">
    <div class="input-group">
      <span class='input-group-addon'><%=t :Name %></span>
      <input type='text' name='u_name' id='u_name' value="" class="form-control"/>
    </div>
  </div>

  <div class="col-md-2">
    <div class="input-group">
      <span class='input-group-addon'><%=t :PlatformId %></span>
      <input type='text' name='platform_id' id='platform_id' value="" class="form-control"/>
    </div>
  </div>

  <input type="button" onclick="doGetPerson()" value="<%=t :search%>" class="btn btn-success"></input>
</div>

<br/><br/>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th><%=t :person_id %></th>
    <th><%=t :person_pid %></th>
    <th><%=t :person_userid %></th>    
    <th><%=t :person_pname %></th>
