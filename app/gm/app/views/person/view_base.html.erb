      <tr>
        <th><%= person.id %></th>
        <th><%= person.pid %></th>
        <th><%= person.user_id %></th>
        <th><%= person.pname %></th>
        <th><%= person.hid %></th>
        <th><%= person.level %></th>
        <th><%= person.fighting_value %></th>
        <th><%= person.online %></th>
        <th><%= person.signature %></th>
        <th><%= person.title %></th>
        <th><%= person.faction %></th>
        <th><%= person.faction_name %></th>
        <th><%= person.portrait_id %></th>
        <th><%= person.total_likes %></th>
