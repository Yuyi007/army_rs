        <th><%= person.b_reply %></th>
      </tr>
    <% end %>
  <% end %>
  </table>

  <br></br>

  <table class="table table-striped table-bordered table-hover">
  <tr>
    <th><%=t :person_id %></th>
    <th><%=t :person_avatar %></th>
    <th><%=t :person_unread_message_senders %></th>

    <th><%=t :person_followers %></th>
    <th><%=t :person_following %></th>
