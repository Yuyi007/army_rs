<table class="table table-striped table-bordered table-hover">
  <tr>
    <th><%=t :person_pid %></th>
    <th><%=t :person_pname %></th>
    <th><%=t :person_hid %></th>
    <th><%=t :person_level %></th>
    <th><%=t :person_figting_value %></th>
    <th><%=t :person_online %></th>
    <th><%=t :person_signature %></th>
    <th><%=t :person_title %></th>
    <th><%=t :person_faction_tid %></th>
    <th><%=t :person_faction_name %></th>
    <th><%=t :person_portrait_id %></th>
    <th><%=t :person_total_likes %></th>
    <th><%=t :person_b_like %></th>
    <th><%=t :person_b_reply %></th>
  </tr>
  <% if @persons %>
    <% @persons.each_with_index do|person, i| %>
      <tr>
        <th><%= person.pid %></th>
        <th><%= person.pname %></th>
        <th><%= person.hid %></th>
        <th><%= person.level %></th>
        <th><%= person.fighting_value %></th>
        <th><%= person.online %></th>
        <th><%= person.signature %></th>
        <th><%= person.title %></th>
        <th><%= person.faction %></th>
        <th><%= person.faction_name %></th>
        <th><%= person.portrait_id %></th>
        <th><%= person.total_likes %></th>
        <th><%= person.b_like %></th>
        <th><%= person.b_reply %></th>
      </tr>
    <% end %>
  <% end %>
  <tr>
    <th><%=t :person_pid %></th>
    <th><%=t :person_avatar %></th>
    <th><%=t :person_unread_message_senders %></th>

    <th><%=t :person_followers %></th>
    <th><%=t :person_following %></th>
    <th><%=t :person_blocklist %></th>
    <th><%=t :person_followed %></th>
    <th><%=t :person_npcs %></th>
    <th><%=t :person_recent_contacts %></th>

    <th><%=t :person_timeline %></th>
    <th><%=t :person_tweets %></th>
    <th><%=t :person_news_tweets %></th>
  </tr>
  <% if @persons %>
    <% @persons.each_with_index do|person, i| %>
      <tr>
        <th><%= person.pid %></th>
        <th><%= link_to t(:view_details), person_view_avatar_url(person.pid) %></th>
        <th><%= link_to t(:view_details), person_view_unread_message_senders_url(person.pid) %></th>

        <th><%= link_to t(:view_details), person_view_followers_url(person.pid) %></th>
        <th><%= link_to t(:view_details), person_view_following_url(person.pid) %></th>
        <th><%= link_to t(:view_details), person_view_blocklist_url(person.pid) %></th>
        <th><%= link_to t(:view_details), person_view_followed_url(person.pid) %></th>
        <th><%= link_to t(:view_details), person_view_npcs_url(person.pid) %></th>
        <th><%= link_to t(:view_details), person_view_recent_contacts_url(person.pid) %></th>

        <th><%= link_to t(:view_details), person_view_timeline_url(person.pid) %></th>
        <th><%= link_to t(:view_details), person_view_tweets_url(person.pid) %></th>
        <th><%= link_to t(:view_details), person_view_news_tweets_url(person.pid) %></th>
      </tr>
    <%end%>
  <% end %>
</table>