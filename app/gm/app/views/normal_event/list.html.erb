<table id='eventstable' class='table table-striped table-bordered table-hover'>
  <col width="20px" />
  <col width="20px" />
  <col width="20px" />
  <col width="50px" />
  <col width="30px" />
  <col width="30px" />
  <col width="30px" />
  <col width="80px" />
  <col width="80px" />
  <tr>
    <th><%=t :id %></th>
    <th><%=t :zones %></th>
    <th><%=t :tid %></th>
    <th><%=t :type %></th>
    <th><%=t :prepare_time %></th>
    <th><%=t :start_time %></th>
    <th><%=t :end_time %></th>
    <th><%=t :finish_time %></th>
    <th><%=t :action %></th>
  </tr>
  <% ns = @event_list
    ns.each do |n|  %>
  <tr>
    <td><%=n.id%></td>
    <td><%="#{if n.zones == 'all' then n.zones else n.zones.join(',') end}"%></td>
    <td><%=n.type%></td>
    <td>
    <%= if GameConfig.evt_total_credit[n.type] then GameConfig.strings['str_credit_event'] else GameConfig.strings['str_login_event'] end %>
    </td>
    <td><%=n.prepare_time%></td>
    <td><%=n.start_time%></td>
    <td><%=n.end_time%></td>
    <td><%=n.finish_time%></td>
    <td>
      <%= link_to(t(:edit), {:action => :edit, :id => n.id}, {:method => :get}) %>
      <%= link_to(t(:delete), {:action => :delete, :id => n.id}, {:method => :get, :data => {:confirm => t(:are_you_sure_to_delete)} }) %>
    </td>
  </tr>
  <%end%>
</table>

