
<div>
<%= link_to t(:add_notif_alert), new_notif_alert_url, { :class => "btn btn-success btn-sm"} %>
</div>

<br/>

<table class='table table-striped table-bordered table-hover'>

  <tr>
    <th><%=t :id %></th>
    <th><%=t :name %></th>
    <th><%=t :receivers_list %></th>
    <th><%=t :enabled %></th>
    <th><%=t :actions %></th>
  </tr>

  <% for alert in @alerts %>
  <tr>
    <td><%= link_to alert.id, notif_alert_url(alert.id) %></td>
    <td><%= alert.name %></td>
    <td><%= alert.receivers %></td>
    <td><%= alert.enabled %></td>
    <td>
      <%= link_to t(:check_now), check_notif_alert_url(alert.id), {:class => "btn btn-success", :method => :post} %>
      <% if current_user.role_name == 'admin' %>
        <%= link_to t(:edit), edit_notif_alert_url(alert.id), {:class => "btn btn-success"} %>
        <%= link_to t(:delete), notif_alert_url(alert.id), {:class => "btn btn-danger", :method => :delete } %>
      <% end %>
    </td>
  </tr>
  <% end %>

</table>