<%= render "shared/error_messages", :target => @user %>

<p>
<%= form.label :email %><br />
<%= form.text_field :email, :class => "form-control", :placeholder => "Email address" %>
</p>
<p>
<%= form.label :username %><br />
<%= form.text_field :username, :class => "form-control", :placeholder => "User name" %>
</p>
<p>
<%= form.label :password, form.object.new_record? ? nil : "Change password" %><br />
<%= form.password_field :password, :class => "form-control", :placeholder => "Password" %>
</p>
<p>
<%= form.label :password_confirmation %><br />
<%= form.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm password" %>
</p>