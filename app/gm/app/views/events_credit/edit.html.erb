<h1><%=t :edit_credit %></h1>
<%= form_for_hash @credit, 'credit', {:action => "update"}, :method => :post, :class => "form" do |f| %>
  <%= render :partial => "form", :object => f, :locals => { :credit => @credit } %>
  <%= f.submit t(:save), :class => "btn btn-info" %>
<% end %>
<br />
<%= link_to t(:credit_list_url), {:action => "list", :zone => @zone}, :class => "btn btn-warning" %>
